{
	"compilerOptions": {
		"target": "es2018",
		"jsx": "react",
		"lib": [
			"dom","es2018"
		],
		"module": "es2015",
		"strict": true,
		"outDir": "./dist",
		"noEmitOnError": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"locale":"zh-cn",
		"strictNullChecks": false
	},
	"exclude": [
		"/node_modules","./dist","./css","./src","./webpack"
	],
	"files": [
		"./ts/main.ts"
	]
}